{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Song Analysis Schema",
  "type": "object",
  "properties": {
    "songInfo": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "artist": { "type": "string" },
        "album": { "type": "string" },
        "released": { "type": "string" },
        "genre": { "type": "string" },
        "tempo": { "type": "string" },
        "duration": { "type": "string" },
        "key": { "type": "string" },
        "tuning": { "type": "string" }
      },
      "required": ["title", "artist", "album", "released", "genre", "key"]
    },
    "difficulty": {
      "type": "object",
      "properties": {
        "overall": { "type": "string" },
        "rhythmGuitar": { "type": "string" },
        "leadGuitar": { "type": "string" },
        "bass": { "type": "string" },
        "drums": { "type": "string" }
      },
      "required": ["overall"]
    },
    "musicalAnalysis": {
      "type": "object",
      "properties": {
        "keyAndScale": { 
          "type": "object",
          "properties": {
            "primaryKey": { "type": "string" },
            "scalesUsed": { "type": "array" },
            "modalCharacter": { "type": "string" },
            "keySignature": { "type": "string" },
            "relativeMinor": { "type": "string" }
          },
          "required": ["primaryKey", "modalCharacter"]
        },
        "chordProgressions": { 
          "type": "object",
          "properties": {
            "mainProgression": {
              "type": "object",
              "properties": {
                "chords": { 
                  "type": "array", 
                  "items": { "type": "string" },
                  "minItems": 1
                },
                "progression": { "type": "string" },
                "description": { "type": "string" }
              },
              "required": ["chords", "progression", "description"]
            },
            "sectionProgressions": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "section": { "type": "string" },
                  "progression": { "type": "string" },
                  "romanNumerals": { "type": "string" },
                  "description": { "type": "string" }
                },
                "required": ["section", "progression", "romanNumerals", "description"]
              }
            },
            "harmonicFunction": {
              "type": "array",
              "items": { "type": "string" }
            }
          },
          "required": ["mainProgression"]
        }
      },
      "required": ["keyAndScale", "chordProgressions"],
      "additionalProperties": true
    },
    "techniques": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "difficulty": { "type": "string" },
          "primaryTechnique": { "type": "boolean" },
          "details": { "type": "object" }
        },
        "required": ["name", "description", "difficulty"]
      }
    },
    "sections": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "timeStamp": { "type": "string" },
          "technique": { "type": "string" },
          "key": { "type": "string" },
          "description": { "type": "string" },
          "tab": { "type": "string" },
          "vexTab": { "type": "string" },
          "chords": { "type": "array", "items": { "type": "string" } },
          "progression": { "type": "string" },
          "notes": { "type": "array", "items": { "type": "string" } }
        },
        "required": ["name", "description"]
      }
    },
    "equipment": {
      "type": "object",
      "properties": {
        "guitar": { "type": "object" },
        "amp": { "type": "object" },
        "effects": { "type": "object" }
      }
    },
    "learningPath": {
      "type": "object",
      "properties": {
        "beginner": { "type": "object" },
        "intermediate": { "type": "object" },
        "advanced": { "type": "object" }
      }
    },
    "relatedSongs": {
      "type": "object",
      "properties": {
        "sameArtist": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": { "type": "string" },
              "link": { "type": "string" },
              "similarity": { "type": "string" }
            }
          }
        },
        "similarTechniques": { "type": "array" }
      }
    },
    "practiceNotes": {
      "type": "object",
      "properties": {
        "commonMistakes": { 
          "type": "array", 
          "items": { "type": "string" },
          "minItems": 1
        },
        "practiceRoutine": { 
          "type": "array", 
          "items": { "type": "string" },
          "minItems": 1
        },
        "focusAreas": { 
          "type": "array", 
          "items": { "type": "string" },
          "minItems": 1
        },
        "metronomeWork": { 
          "type": "array", 
          "items": { "type": "string" },
          "minItems": 1
        }
      },
      "required": ["commonMistakes", "practiceRoutine", "focusAreas", "metronomeWork"]
    }
  },
  "required": ["songInfo", "difficulty", "techniques", "sections", "equipment", "learningPath", "relatedSongs", "practiceNotes"],
  "additionalProperties": false
}
