{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Song Analysis Schema",
  "type": "object",
  "properties": {
    "songInfo": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "artist": { "type": "string" },
        "album": { "type": "string" },
        "released": { "type": "string" },
        "genre": { "type": "string" },
        "tempo": { "type": "string" },
        "duration": { "type": "string" },
        "key": { "type": "string" },
        "tuning": { "type": "string" }
      },
      "required": ["title", "artist", "album", "released", "genre", "key"]
    },
    "difficulty": {
      "type": "object",
      "properties": {
        "overall": { "type": "string" },
        "rhythmGuitar": { "type": "string" },
        "leadGuitar": { "type": "string" },
        "bass": { "type": "string" },
        "drums": { "type": "string" }
      },
      "required": ["overall"]
    },
    "musicalAnalysis": {
      "type": "object",
      "properties": {
        "keyAndScale": { 
          "type": "object",
          "properties": {
            "primaryKey": { "type": "string" },
            "scalesUsed": { "type": "array" },
            "modalCharacter": { "type": "string" },
            "keySignature": { "type": "string" },
            "relativeMinor": { "type": "string" }
          },
          "required": ["primaryKey", "modalCharacter"]
        },
        "chordProgressions": { 
          "type": "object",
          "properties": {
            "mainProgression": {
              "type": "object",
              "properties": {
                "chords": { 
                  "type": "array", 
                  "items": { "type": "string" },
                  "minItems": 1
                },
                "progression": { "type": "string" },
                "description": { "type": "string" }
              },
              "required": ["chords", "progression", "description"]
            },
            "sectionProgressions": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "section": { "type": "string" },
                  "progression": { "type": "string" },
                  "romanNumerals": { "type": "string" },
                  "description": { "type": "string" }
                },
                "required": ["section", "progression", "romanNumerals", "description"]
              }
            },
            "harmonicFunction": {
              "type": "array",
              "items": { "type": "string" }
            }
          },
          "required": ["mainProgression"]
        }
      },
      "required": ["keyAndScale", "chordProgressions"],
      "additionalProperties": true
    },
    "techniques": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "difficulty": { "type": "string" },
          "primaryTechnique": { "type": "boolean" },
          "details": { "type": "object" }
        },
        "required": ["name", "description", "difficulty"]
      }
    },
    "sections": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "timeStamp": { "type": "string" },
          "technique": { "type": "string" },
          "key": { "type": "string" },
          "description": { "type": "string" },
          "tab": { "type": "string" },
          "vexTab": { "type": "string" },
          "chords": { "type": "array", "items": { "type": "string" } },
          "progression": { "type": "string" },
          "notes": { "type": "array", "items": { "type": "string" } }
        },
        "required": ["name", "description"]
      }
    },
    "equipment": {
      "type": "object",
      "properties": {
        "guitar": { "type": "object" },
        "amp": { "type": "object" },
        "effects": { "type": "object" }
      }
    },
    "learningPath": {
      "type": "object",
      "properties": {
        "beginner": { "type": "object" },
        "intermediate": { "type": "object" },
        "advanced": { "type": "object" }
      }
    },
    "relatedSongs": {
      "type": "object",
      "properties": {
        "sameArtist": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": { "type": "string" },
              "link": { "type": "string" },
              "similarity": { "type": "string" }
            }
          }
        },
        "similarTechniques": { "type": "array" }
      }
    },
    "practiceNotes": {
      "type": "object",
      "properties": {
        "commonMistakes": { 
          "type": "array", 
          "items": { "type": "string" },
          "minItems": 1
        },
        "practiceRoutine": { 
          "type": "array", 
          "items": { "type": "string" },
          "minItems": 1
        },
        "focusAreas": { 
          "type": "array", 
          "items": { "type": "string" },
          "minItems": 1
        },
        "metronomeWork": { 
          "type": "array", 
          "items": { "type": "string" },
          "minItems": 1
        }
      },
      "required": ["commonMistakes", "practiceRoutine", "focusAreas", "metronomeWork"]
    },
    "metadata": {
      "type": "object",
      "properties": {
        "popularity": { 
          "type": "number", 
          "minimum": 1, 
          "maximum": 100,
          "description": "Popularity score from 1-100"
        },
        "dateAdded": { 
          "type": "string", 
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
          "description": "Date added in YYYY-MM-DD format"
        },
        "viewCount": { 
          "type": "number", 
          "minimum": 0,
          "description": "Number of page views"
        },
        "featured": { 
          "type": "boolean",
          "description": "Whether song is featured on homepage"
        },
        "decade": { 
          "type": "string",
          "enum": ["1960s", "1970s", "1980s", "1990s", "2000s", "2010s", "2020s"],
          "description": "Decade the song was released"
        },
        "subGenre": { 
          "type": "string",
          "description": "More specific genre classification"
        },
        "instruments": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["Lead Guitar", "Rhythm Guitar", "Bass", "Drums", "Vocals", "Piano", "Synthesizer"]
          },
          "description": "Primary instruments featured in the song"
        },
        "tags": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Descriptive tags for categorization"
        },
        "learningValue": { 
          "type": "string",
          "description": "Educational value description"
        },
        "iconicRiff": { 
          "type": "boolean",
          "description": "Whether song features an iconic guitar riff"
        },
        "estimatedLearningTime": {
          "type": "string",
          "description": "Estimated time to learn the song"
        }
      },
      "required": ["popularity", "dateAdded", "featured", "decade"]
    }
  },
  "required": ["songInfo", "difficulty", "techniques", "sections", "equipment", "learningPath", "relatedSongs", "practiceNotes", "metadata"],
  "additionalProperties": false
}
